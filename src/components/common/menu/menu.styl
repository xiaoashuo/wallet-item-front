border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    border-top 1px solid $color
    width: 100%
    content: ''

border-none()
  &:after
    display: none


.menu
  .menu-list
    position fixed
    top 0
    bottom 0
    flex 0 0 250px
    left -250px
    width 250px
    background-color #22262a
    color #313131
    transition all .3s ease
    z-index 99

    .menu-header
      width 100%
      height 180px
      background-color #262d30

    &.show
      transform translateX(250px)

    .menu-ul
      margin 0
      overflow hidden
      padding 0


